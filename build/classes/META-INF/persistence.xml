<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="loja?zeroDateTimeBehavior=convertToNullPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>View.Cartao</class>
    <class>View.Pedido</class>
    <class>View.Produto</class>
    <class>View.Funcionario</class>
    <class>View.Fornecedor</class>
    <class>View.Cliente</class>
    <class>View.Contasapagar</class>
    <class>View.Usuario</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/loja?zeroDateTimeBehavior=convertToNull"/>
